<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="220dp"
    android:background="@drawable/bg_marker_attr"
    android:orientation="vertical" 
    android:focusable="false">
    <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:background="#34485e">
    <TextView
            android:id="@+id/tv_marker_titleset"
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="属性编辑"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_19"
           
            />
    <ImageView
		    android:id="@+id/iv_marker_close"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:layout_gravity="right|center_vertical" 
		    android:src="@drawable/btn_search_clean"
		    />
    </LinearLayout>
    
	<View
        android:layout_width="210dp"
        android:layout_height="@dimen/space_1"
         android:layout_gravity="center"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginTop="@dimen/space_5"
        android:background="@color/divide_gray" />
	  <LinearLayout
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_marker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:layout_gravity="left|center_vertical" 
                android:text="标题:"
                android:textSize="@dimen/text_size_17" />

            <EditText
                android:id="@+id/et_marker_title"
                android:paddingLeft="@dimen/space_5"
                android:paddingRight="@dimen/space_15"
                android:drawablePadding="@dimen/space_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:gravity="center_vertical|left"
                android:background="@drawable/shape_editview"
                android:textSize="@dimen/text_size_17"
                android:textColorHint="#80889c"
                android:hint="标注标题" /><!---->

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_marker_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:layout_gravity="left|center_vertical"
                android:text="描述:"
                android:textSize="@dimen/text_size_17" />

              <EditText
                android:id="@+id/et_marker_desc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_editview"
                android:drawablePadding="@dimen/space_5"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="50"
                android:paddingLeft="@dimen/space_5"
                android:paddingRight="@dimen/space_15"
                android:hint="描述信息"
                android:textColorHint="#80889c"
                android:textSize="@dimen/text_size_17"/>
              <!---->

        </LinearLayout>
        
        <View
        android:layout_width="210dp"
        android:layout_height="@dimen/space_2"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginTop="@dimen/space_5"
        android:background="@color/divide_gray" />
       <LinearLayout
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:orientation="horizontal" 
            android:gravity="right" >
		<Button
		    android:id="@+id/bn_marker_pos"
		    android:layout_width="45dp"
		    android:layout_height="32dp"
		    android:layout_marginRight="5dp"
			android:background="@color/login_edit"
		    android:text="确定"
		    android:textSize="@dimen/text_size_15"
		    />
		<Button
		    android:id="@+id/bn_marker_neg"
		    android:layout_width="45dp"
		    android:layout_height="32dp"
		    android:layout_marginRight="5dp"
			android:text="取消" 
		    android:background="#ff6666"
		    android:textSize="@dimen/text_size_15"
		    />
		    <ImageView
		    android:id="@+id/iv_marker_clear"
		    android:layout_width="40dp"
		    android:layout_height="32dp"
		    android:layout_marginRight="4dp"
			android:layout_gravity="center_vertical" 
		    android:src="@drawable/btn_delete"
		    />
            </LinearLayout> 
</LinearLayout>