<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_map_options_view"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginTop="48dp"
        android:layout_marginRight="3dp"
        android:orientation="vertical"
        android:background="@color/black" >

    <ListView
        android:id="@+id/lv_map_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#263a55"
        android:cacheColorHint="@color/transparent"
        android:paddingLeft="@dimen/space_3"
        android:paddingRight="@dimen/space_3"
        android:listSelector="@drawable/item_selector"
        android:divider="#142841"
        android:dividerHeight="@dimen/space_1"
        android:scrollbars="none"
        android:singleLine="true"
        android:layout_marginTop="@dimen/space_1" />
  
    </LinearLayout>
